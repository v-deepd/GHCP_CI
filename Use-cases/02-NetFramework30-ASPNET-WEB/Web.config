<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <!-- 
    Azure Migration: Configuration updated for Azure App Service deployment
    - Windows Authentication removed (not supported in Azure App Service)
    - Azure AD authentication will be configured via Easy Auth in Azure Portal
    - Application Insights added for monitoring
    - Security headers added for production
    -->
    
    <appSettings>
        <!-- Application Insights instrumentation key (set via Azure App Settings) -->
        <add key="APPINSIGHTS_INSTRUMENTATIONKEY" value="" />
        
        <!-- Authorized roles for Secure.aspx (Azure AD roles) -->
        <add key="AuthorizedRoles" value="SecureAppUsers,AppAdministrators" />
        
        <!-- Azure AD configuration (if not using Easy Auth) -->
        <!-- <add key="ida:ClientId" value="" /> -->
        <!-- <add key="ida:Tenant" value="" /> -->
        <!-- <add key="ida:Domain" value="" /> -->
    </appSettings>
    
    <connectionStrings>
        <!-- Azure SQL Database connection string (reference from Key Vault via App Settings) -->
        <!-- Example: @Microsoft.KeyVault(SecretUri=https://your-vault.vault.azure.net/secrets/SqlConnectionString/) -->
    </connectionStrings>
    
    <system.web>
        <compilation debug="false" targetFramework="4.8">
            <assemblies>
                <add assembly="System.Web, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/>
                <add assembly="System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/>
                <add assembly="System.Security, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/>
            </assemblies>
        </compilation>
    
        <!-- 
        Azure Migration: Authentication mode set to None
        Azure App Service Easy Auth will handle authentication at the platform level
        -->
        <authentication mode="None" />
        
        <!-- Allow all users - Azure Easy Auth handles authentication -->
        <authorization>
            <allow users="*" />
        </authorization>

        <!-- Custom error pages for production -->
        <customErrors mode="On" defaultRedirect="~/Error.aspx">
            <error statusCode="403" redirect="~/AccessDenied.aspx" />
            <error statusCode="404" redirect="~/PageNotFound.aspx" />
        </customErrors>
        
        <!-- Session state configuration -->
        <sessionState mode="InProc" timeout="20" />
        
        <!-- Enable request validation -->
        <httpRuntime targetFramework="4.8" enableVersionHeader="false" maxRequestLength="10240" />
        
        <!-- Pages configuration -->
        <pages controlRenderingCompatibilityVersion="4.0" />
    </system.web>

    <!-- Azure App Service: Minimal configuration for compatibility -->
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <!-- Security headers for production -->
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
    


    <!-- Location specific configuration for the Secure page -->
    <!-- Note: Authorization is now handled by Azure AD via Easy Auth -->
    <location path="Secure.aspx">
        <system.web>
            <authorization>
                <!-- All authorization checks moved to code-behind using Azure AD claims -->
                <allow users="*" />
            </authorization>
        </system.web>
    </location>

</configuration>
